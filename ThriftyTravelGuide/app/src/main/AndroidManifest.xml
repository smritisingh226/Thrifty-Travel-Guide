<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.thriftytravelguide">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThriftyTravelGuide"
        tools:ignore="ExtraText"
        tools:targetApi="31">
        <activity
            android:name=".IndiaSplash"
            android:exported="false" />
        <activity
            android:name=".ParisSplash"
            android:exported="false" />
        <activity
            android:name=".CanadaSplash"
            android:exported="false" />
        <activity
            android:name=".AustraliaSplash"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Register"
            android:exported="false" />
        <activity
            android:name=".parisDescription"
            android:exported="false" />
        <activity
            android:name=".indiaDescription"
            android:exported="true" />
        <activity
            android:name=".canadaDescription"
            android:exported="true" />
        <activity
            android:name=".australiaDescription"
            android:exported="false" />
        <activity
            android:name=".MainDestinationScreen2"
            android:exported="true" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".musicService" />
    </application>

</manifest>